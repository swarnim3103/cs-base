{
  "manifest_version": 3,
  "name": "Voice Mouse Controller",
  "version": "1.0",
  "description": "Control mouse with your voice!",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.jpg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}