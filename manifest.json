{
  "manifest_version": 3,
  "name": "Voice Mouse Control",
  "version": "1.0",
  "description": "Control your mouse with voice commands",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Voice Control"
  }
}
